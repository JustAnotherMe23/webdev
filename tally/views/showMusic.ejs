<!DOCTYPE html>
<html>
    <head>
        <title>TRadio</title>
        <link href="https://fonts.googleapis.com/css?family=Cinzel:900|Lato:300" rel="stylesheet">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="/tally/views/styles.css"></link>
    </head>
    <body>
        <div id="login_button_wrapper" class="hide">
            <button id="login_button" onclick="login()" class="hide">Continue with Facebook</button>
        </div>
        <div id="login_block" class="hide"></div>
        
        <div id="navbar">
            <div id="top_line">
                <div id="logo">Tally Radio</div>
                <div id="vote">
                    <input type="text" class="text_input" id="vote_input" placeholder="Soundclound url"></input>
                    <button class="submit" id="vote_button">Submit</button>
                </div>
            </div>
            <div id="nav_options">
                <div class="nav_item depressed">Playing ...</div>
                <div class="nav_item">Search</div>
                <div class="nav_item">About</div>
            </div>
        </div>
        
        <div id="container">
            <div id="player_body" class="body_item">
                <div id="spacer"></div>
                <div id="player_space"><iframe id="player" width="100%" height="400" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?visual=true&url=http%3A%2F%2Fapi.soundcloud.com%2Ftracks%2F291270561&show_artwork=true"></iframe></div>
                <div id="chat_box">
                    <form onsubmit="return false" autocomplete="off">
                        <input type="text" id="chat_input" placeholder="Enter comment"></input>
                    </form>
                    <div id="chat_comments"></div>
                </div>
            </div>
            <div id="search_body" class="body_item"></div>
            <div id="about_body" class="body_item"></div>
        </div>
        
        
        <script src="/tally/node_modules/socket.io-client/dist/socket.io.js"></script>
        <script type="text/javascript" src="https://w.soundcloud.com/player/api.js"></script>
        <script type="text/javascript" src="/tally/views/showMusic.js"></script>
    </body>
</html>