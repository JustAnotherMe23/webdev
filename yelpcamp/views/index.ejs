<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked locations</p>
            <p><a href="/campgrounds/new" class="btn btn-large btn-primary">Submit Campground</a></p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds</h3>
        </div>
    </div>
    
    <div class="row text-center" style="display: flex; flex-wrap: wrap">
        <% for(i = 0; i < campgrounds.length; i++) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campgrounds[i].image %>">
                    <div class="caption"><h4><%= campgrounds[i].name %></h4></div>
                    <div>
                        <p>
                            <a href="/campgrounds/<%= campgrounds[i]._id%>" class = "btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
    <a href="/"><button>Return to home</button></a>
<% include partials/footer %>
</div>